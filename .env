# Spring Notification Service Environment Variables
# Copy this file to your project root as .env

# Spring Profile Configuration
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=notification_db
DB_USERNAME=notification_user
DB_PASSWORD=notification_password

# Database Root Password (for MySQL container)
MYSQL_ROOT_PASSWORD=root_password_change_in_production

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=notification_user
RABBITMQ_PASSWORD=notification_password
RABBITMQ_DEFAULT_VHOST=notification_vhost

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_FROM=noreply@yourcompany.com

# JWT Security Configuration
JWT_SECRET=superSecretJWTKeyThatIsVeryLongAndSecureForProductionUse2024NotificationService
JWT_EXPIRATION=3600

# Server Configuration
SERVER_PORT=8080

# Development/Testing Overrides (uncomment for local dev)
# SPRING_PROFILES_ACTIVE=dev
# DB_HOST=localhost
# RABBITMQ_HOST=localhost